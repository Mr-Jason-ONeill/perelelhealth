<div class="recipe-container">
    <div class="recipe-wrapper">
        <div class="recipe-ingredients">
            <h2 class="recipe-title">{{ section.settings.recipeTitle | strip }}</h2>
            <div class="ingredients">Ingredients:</div>
            <div class="ingredient-block">
                {{ section.settings.recipeIngredients }}
            </div>
        </div>

        <div class="recipe-image">
            {{ section.settings.recipeImage |  image_url: width: 400 |  image_tag  }}
        </div>
    </div>
</div>


{% schema %}
    {
      "name": "recipes",
      "settings": [
          {
              "type": "richtext",
              "id": "recipeTitle",
              "label": "Recipe Title"
          }, {
              "type": "richtext",
              "id": "recipeIngredients",
              "label": "Recipe"
          }, {
              "type": "image_picker",
              "id": "recipeImage",
              "label": "Recipe Image"
          }
      ]
    }
  {% endschema %}