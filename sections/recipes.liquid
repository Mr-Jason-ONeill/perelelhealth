<div class="recipe-container">
  <div class="recipe-wrapper">
    <div class="recipe-ingredients">
      <div class="recipe-title">{{ section.settings.recipeTitle | strip }}</div>
      <br/>
      <div class="recipe-info">{{ section.settings.recipeInfo | strip }}</div>
      <br/>
      <div class="ingredients">Ingredients:</div>
      <br/>
      <div class="ingredient-block">
        <ul>
          {% for block in section.blocks %}
            <li>{{ block.settings.steps | capitalize }}</li>
            <hr>
          {% endfor %}
        </ul>
      </div>


    </div>

    <div class="recipe-image">
      {{ section.settings.recipeImage | image_url: width: 400 | image_tag }}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "recipes",
    "settings": [
      {
        "type": "richtext",
        "id": "recipeTitle",
        "label": "Recipe Title"
      }, {
        "type": "image_picker",
        "id": "recipeImage",
        "label": "Recipe Image"
      }, {
        "type": "textarea",
        "id": "recipeInfo",
        "label": "Recipe Description"
      }
    ],
    "blocks": [
      {
        "name": "Recipe Step",
        "type": "richtext",
        "limit": 10,
        "settings": [
          {
            "type": "textarea",
            "id": "steps",
            "label": "Add a step to the Recipe"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "recipes"
      }
    ]
  }
{% endschema %}