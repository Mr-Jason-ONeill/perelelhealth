<div class="image-container">
  <div class="image-wrapper">
    <div class="image-context">
      {% if section.settings.displayInfo == true %}
        <div class="img-svg"></div>
        <div class="image-title">{{ section.settings.imageHeading }}</div>
        <div class="image-text">{{ section.settings.imageContext }}</div>
        <button class="shop-now-btn" style="background-color: #fff;">Shop Now</button>
      {% endif %}
    </div>

    <div class="bg-image">
      {% if section.settings.imageCard %}
        {{ section.settings.imageCard | image_url: width: 2000 | image_tag: preload: true }}
      {% endif %}
    </div>

  </div>
</div>
{% schema %}
  {
    "name": "imageCard",
    "settings": [
      {
        "type": "checkbox",
        "id": "displayInfo",
        "label": "Display Information?"
      }, {
        "type": "image_picker",
        "id": "imageCard",
        "label": "Image"
      }, {
        "type": "text",
        "id": "imageHeading",
        "label": "Image Title"
      }, {
        "type": "textarea",
        "id": "imageContext",
        "label": "Information"
      }
    ],
    "presets": [
      {
        "name": "imageCard"
      }
    ]
  }
{% endschema %}